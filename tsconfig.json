{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$components/*": ["components/*"],
      "$lib/*": ["lib/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "__tests__/requesthandler.test.js", "lib/prisma.ts", "components/context/Context.jsx", "components/context/FormikContext.jsx"],
  "exclude": ["node_modules"]
}
